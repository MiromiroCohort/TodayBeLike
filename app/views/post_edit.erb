<div class="container">
	<form method="post" class="form-horizontal">
		<input name="id" type="hidden" value="<%= @this_post.id %>" />
		<input name="_method" type="hidden" value="patch" />
		<div class="input-group">
			<label for="title" class="input-group-addon">Title:</label>
			<input name="title" type="text" value="<%=@this_post.title%>" class="form-control" />
		</div>
		<div class="input-group">
			<label for="content" class="input-group-addon">Today be like...</label>
			<textarea name="content" class="form-control"><%=@this_post.content %></textarea>
		</div>
		<div class="row">
			<div class="col-md-5">
				<div class="input-group">
					<label for="title" class="input-group-addon">First posted:</label>
					<input name="title" type="text" value="<%=@this_post.created_at%>" class="form-control" disabled/>
				</div>
				<div class="input-group">
					<label for="title" class="input-group-addon">Last modified:</label>
					<input name="title" type="text" value="<%=@this_post.updated_at%>" class="form-control" disabled/>
				</div>
			</div>
			<div class="col-md-7">
				<div class="input-group pull-right">
					<br />
					<input type="submit" class="btn btn-danger" value="Confirm Edit" />
				</div>
			</div>
		</div>
	</form>
</div>
